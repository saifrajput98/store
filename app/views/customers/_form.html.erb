<%= form_with(model: @customer, local: true) do |form| %>
  <% if @customer.errors.any? %>
    <div id="error_explanation" class="container">
      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="container col-lg-12 form-style form-group margin">
    <div class="ibox-content">
      <div class="row">
        <div class="col-lg-12 margin">
          <%= form.label :name %>
        </div>
        <div class="col-lg-12">
          <%= form.text_field :name, class: "form-control"%>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12 margin">
          <%= form.label :Contact %>
        </div>
        <div class="col-lg-12">
          <%= form.text_field :contact1, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12 margin">
          <%= form.label :another_contact %>
        </div>
        <div class="col-lg-12">
          <%= form.text_field :contact2, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12 margin">
          <%= form.label :email %>
        </div>
        <div class="col-lg-12">
          <%= form.text_field :email, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12 margin">
          <%= form.label :address %>
        </div>
        <div class="col-lg-12">
          <%= form.text_field :address, class: "form-control" %>
        </div>
      </div>
      <div class="row margin">
        <div class="actions middle-box col-lg-6">
          <%= form.submit "Done", class: "btn btn-primary" %>
        </div>
      </div>
    </table>
  </div>
<% end %>
