<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Customers</h2>
    <ol class="breadcrumb">
      <li class="active">
        <strong>
          <a href="<%= customers_path %>">Home</a>
        </strong>
      </li>
    </ol>
  </div>
</div>

<div class="ibox-content m-b-sm border-bottom margin">
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= form_tag customers_path, method: 'get' do %>
          <table>
            <label class="control-label">Customer Name</label>
            <tr>
              <td><%= text_field_tag :search, params[:search], placeholder: 'Search here',class: "form-control" %></td>
              <td><%= submit_tag :search, class: "btn btn-primary"%></td>
            </tr>
          </table>
        <% end %> 
      </div>
    </div>
  </div>
</div>

<div class="col-lg-16 animated fadeInDown margin">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
    <h5>List of Customers</h5>
      <div class="ibox-tools">
        <%= link_to fa_icon("plus"), new_customer_path, class: "fa-2x" %>
        <a class="collapse-link"><i class="fa fa-chevron-up fa-2x"></i></a>
      </div>
    </div>
    <div class="ibox-content">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Contact</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.name %></td>
            <td><%= customer.contact1 %></td>
            <td>
              <%= link_to fa_icon("info-circle"), customer, class: "icon-margin" %>
              <%= link_to fa_icon("edit"), edit_customer_path(customer), class: "icon-margin"%>
              <%= link_to fa_icon("trash"), customer, method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

