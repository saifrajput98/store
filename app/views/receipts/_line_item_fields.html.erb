<div class='nested-fields form-group'>
  <div class='nested-fields form-group'>
    <div class="row">
      <div class="col-lg-12 margin">
        <%= f.label :product_id %>
      </div>
      <div class="col-lg-12">
        <%= f.text_field :product_id, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 margin">
        <%= f.label :quantity %>
      </div>
      <div class="col-lg-12">
        <%= f.text_field :quantity, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 margin">
        <%= f.label :discount %>
      </div>
      <div class="col-lg-12">
        <%= f.text_field :discount, class: "form-control" %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12 margin">
        <%= f.label :total_price %>
      </div>
      <div class="col-lg-12">
        <%= f.text_field :price, class: "form-control" %>
      </div>
    </div>
    
  </div>
  <%= link_to_remove_association "remove", f , class: "btn btn-primary btn-xs"%>
</div>
