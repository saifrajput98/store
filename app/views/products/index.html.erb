<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2>Products</h2>
    <ol class="breadcrumb">
      <li class="active">
        <strong>
          <a href="<%= products_path %>">Home</a>
        </strong>
      </li>
    </ol>
  </div>
</div>

<div class="ibox-content m-b-sm border-bottom margin">
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= form_tag products_path, method: 'get' do %>
          <table>
            <label class="control-label" for="product_name">Product Name/Code</label>
            <tr>
              <td><%= text_field_tag :search, params[:search], placeholder: 'Search here',class: "form-control" %></td>
              <td><%= submit_tag :search, class: "btn btn-primary"%></td>
            </tr>
          </table>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="col-lg-12 animated fadeInDown margin">
  <div class="ibox float-e-margins">
    <div class="ibox-title">
      <h5>List of Products</h5>

      <div class="ibox-tools">
        <%= link_to fa_icon("plus"), new_product_path, class: "btn btn-primary btn-xs fa-xs"%>
        <a class="collapse-link"><i class="fa fa-chevron-up fa-2x"></i></a>
      </div>
    </div>

    <div class="ibox-content">
      <table class="table table-hover table-striped">
        <thead>
           <tr>
            <th>Title</th>
            <th class="hide-small-screen">Description</th>
            <th>Product code</th>
            <th colspan="3">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= product.title %></td>
              <td class="hide-small-screen"><%= product.description %></td>
              <td><%= product.product_code %></td>
              <td>
                <%= link_to fa_icon("info-circle"), product, class: "icon-margin" %>|
                <%= link_to fa_icon("edit"), edit_product_path(product), class: "icon-margin" %>|
                <%= link_to fa_icon("trash"), product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

