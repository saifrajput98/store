<%= render "layouts/products_header" %>

<div class="middle-box animated fadeInDown">
  <div class="ibox">
    <div class="ibox-title">
      <h5 class="text-center">Top-up Quantity</h5>
      <div class="ibox-tools">
        <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
      </div>
    </div>
    <%= form_with(model: @product, local: true) do |form| %>
      <% if @product.errors.any? %>
        <div id="error_explanation" class="container">
          <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <table class="container col-lg-12 form-style form-group margin">
        <div class="ibox-content">

          <div class="row">
            <div class="col-lg-12 margin">
              <%= form.label :quantity %>
            </div>

            <div class="col-lg-12">
              <%= form.number_field(:quantity, min:0 , class: 'form-control')%>
            </div>
          </div>

          <div class="row">
            <div class="actions middle-box col-lg-12 margin">
              <%= form.submit class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      </table>
    <% end %>
  </div>
</div>
