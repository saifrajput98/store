<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="container">
      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="container col-lg-12 form-style form-group margin">
    <div class="ibox-content">
      <div class="row">
        <div class="col-lg-12 margin">
          <%= form.label :title %>
        </div>

        <div class="col-lg-12">
          <%= form.text_field :title, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12 margin">
          <%= form.label :description %>
        </div>

        <div class="col-lg-12">
          <%= form.text_field :description, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12 margin">
          <%= form.label :unit_price %>
        </div>

        <div class="col-lg-12">
          <%= form.text_field :unit_price, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12 margin">
          <%= form.label :quantity %>
        </div>

        <div class="col-lg-12">
          <%= form.number_field(:quantity, in: 0..10000, class: 'form-control')%>
        </div>
      </div>

      <div class="row">
        <div class="col-lg-12 margin">
          <%= form.label :product_code %>
        </div>
        <div class="col-lg-12">
          <%= form.text_field :product_code, class: "form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="actions middle-box col-lg-12 margin">
          <%= form.submit "Done", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
</table>

<% end %>
