<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation" class="container">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container col-lg-6" style="background-color: silver;border-radius: 50px;">
    
    <div class="row">
      <div class="col-lg-12 col-sm-12" style="margin-top:2%">
        <%= form.label :title %>
      </div>
      <div class="col-lg-12">
        <%= form.text_field :title %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <%= form.label :description %>
      </div>
      <div class="col-lg-12">
        <%= form.text_field :description %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <%= form.label :unit_price %>
      </div>
      <div class="col-lg-12">
        <%= form.text_field :unit_price %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <%= form.label :quantity %>
      </div>
      <div class="col-lg-12">
        <%= form.number_field(:quantity, in: 0..10000) %>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <%= form.label :product_code %>
      </div>
      <div class="col-lg-12">
        <%= form.text_field :product_code %>
      </div>
    </div>

    <div class="row">
      <div class="actions col-lg-12">
        <%= form.submit %>
      </div>
    </div>
  </div>

<% end %>
