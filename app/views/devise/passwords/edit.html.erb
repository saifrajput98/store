<div class="ibox middle-box text-center loginscreen  animated fadeInDown">
  <div class="ibox-title">
    <h3>Change your password</h3>
  </div>
  <div class="ibox-content">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    
    <%= f.hidden_field :reset_password_token %>
          <div class="form-group">
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.label :new_password %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :confirm_new_password %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Change", class: "btn btn-primary block full-width m-b" %>
      </div>
    <div id="formFooter" class="row mx-auto fadeIn third">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
    </div>
  </div>
  </div>
</div>
